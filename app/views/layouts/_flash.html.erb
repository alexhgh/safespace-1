<div class="container">
  <% if flash[:notice] %>
    <% if current_page?(root_path) %>
    <div class="alert flash-message alert-success position-root">
    <% else %>
    <div class="alert flash-message alert-success position">
    <% end %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <% if current_page?(root_path) %>
    <div class="alert flash-message alert-warning position-root">
    <% else %>
    <div class="alert flash-message alert-warning position">
    <% end %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>
