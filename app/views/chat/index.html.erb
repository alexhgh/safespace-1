<div id="chat" class="container page-content">
  <div class="row">
    <div class="col-md-3">
      <div class="card text-dark friends-box">
        <div class="card-header">
          <h3 class="card-title friends">Friends</h3>
        </div>
        <div class="card-body users-list">
          <ul>
            <% @users.each do |user| %>
              <li><%= link_to user.username, conversations_path(user_id: user), remote: true, method: :post %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-9 text-dark">
      <ul id="conversations-list">
        <% @conversations.each do |conversation| %>
          <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
